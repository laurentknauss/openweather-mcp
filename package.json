{
  "name": "mcp-server-openweather",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "description": "OpenWeatherMap MCP Server - Weather forecasts via Model Context Protocol",
  "files": [
    "dist"
  ],
  "bin": {
    "mcp-server-openweather": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "start": "node dist/index.js",
    "inspector": "mcp-inspector http://localhost:3000/mcp",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@modelcontextprotocol/inspector": "^0.17.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.1"
  }
}
